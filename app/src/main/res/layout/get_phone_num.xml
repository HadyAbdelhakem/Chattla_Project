<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Login_Layout"
    android:fillViewport="true"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:orientation="vertical"
    tools:context=".ui.login.LoginActivity">

    <!--<androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:background="@drawable/ic_wave">

    </androidx.appcompat.widget.Toolbar>-->

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageview_logo"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:transitionName="imageTransition"
                    android:src="@drawable/icon" />

                <TextView
                    android:id="@+id/textview1_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/tajawal_medium"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="تسجيل الدخول على شتلة"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/tajawal_medium"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:text="قم بإدخال رقم هاتفك لتتمكن من الدخول أو انشاء حساب جديد"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/tajawal_medium"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:text=" رقم الهاتف"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>



        </LinearLayout>

        <!--<TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tajawal_medium"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/login"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp" />-->

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_get_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:background="@drawable/background_white_with_border"
                android:hint=" أدخل رقم الهاتف"
                android:textColorHint="@color/text_color"
                android:inputType="number"
                android:drawableRight="@drawable/ic_phone"
                android:maxLength="11"
                android:maxLines="1"
                android:padding="8dp"
                android:textAlignment="viewStart" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_28sdp"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:fontFamily="@font/tajawal_medium"
                    android:text="@string/new_account_condition"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/tv_terms_and_conditions_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/tajawal_medium"
                    android:text="@string/terms_and_conditions"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>

            <TextView
                android:id="@+id/forgetpassword"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tajawal_medium"
                android:text="@string/forget_password"
                android:textColor="@color/colorOne"
                android:textStyle="bold"
                android:visibility="gone"
                android:textSize="@dimen/_14ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:paddingLeft="@dimen/_40sdp"
                android:paddingRight="@dimen/_40sdp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_login_farmer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:background="@drawable/bk_button"
                    android:fontFamily="@font/tajawal_regular"
                    android:text="@string/login"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_13ssp" />

                <Button
                    android:id="@+id/bt_get_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:background="@drawable/bk_button"
                    android:fontFamily="@font/tajawal_regular"
                    android:text="البحث عن رقم الهاتف"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_password" />

            </LinearLayout>




            <TextView
                android:id="@+id/tv_not_have_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_25sdp"
                android:fontFamily="@font/tajawal_medium"
                android:text="كن استشارى لدى شتلة"
                android:textColor="@color/link_color"
                android:textStyle="bold"
                android:visibility="gone"
                android:textSize="@dimen/_14ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:fontFamily="@font/tajawal_medium"
                    android:text="@string/new_account_condition"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tv_terms_and_conditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/tajawal_medium"
                    android:text="@string/terms_and_conditions"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_13ssp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


