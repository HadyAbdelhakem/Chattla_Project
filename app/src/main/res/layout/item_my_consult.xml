<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_6sdp"
    android:layoutDirection="rtl"
    android:textDirection="rtl">


    <LinearLayout
        android:id="@+id/ly_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_with_border"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tajawal_medium"
                android:text="نوع المحصول"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:id="@+id/tv_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tajawal_medium"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginStart="@dimen/_6sdp"
                android:text="التفاصيل"
                android:padding="4dp"
                android:visibility="gone"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14ssp" />



        </LinearLayout>


        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/tajawal_regular"
            android:gravity="center"
            android:maxLines="2"
            android:text="وصف المحصول.................."
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12ssp" />



        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:background="@drawable/background_dialog"
            android:fontFamily="@font/tajawal_regular"
            android:padding="@dimen/_4sdp"
            android:text=" الحالة : "
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

        <LinearLayout
            android:id="@+id/tv_remove_consult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_4sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:background="@drawable/background_dialog_one"
                android:fontFamily="@font/tajawal_regular"
                android:text="حذف الاستشارة"
                android:textColor="@color/white"
                android:textSize="@dimen/_8ssp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sights_only"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_4sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:background="@drawable/background_dialog_two"
                android:fontFamily="@font/tajawal_regular"
                android:text="لديك صلاحيات رؤية ومتابعة الإستشارة"
                android:textColor="@color/white"
                android:textSize="@dimen/_8ssp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:layout_weight="1"
            android:text="vvvvvvvvvvvvvvvv"
            android:fontFamily="@font/tajawal_regular"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12ssp" />


    </LinearLayout>



</RelativeLayout>