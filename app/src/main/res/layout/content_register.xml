<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:textDirection="rtl"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.agri.chattla.ui.register.RegisterActivity">



<androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/imageview_back"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:src="@drawable/ic_arrow"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_gravity="left"/>

        <TextView
            android:id="@+id/textview4_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/tajawal_bold"
            android:text="@string/create_account"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_16ssp" />

    </androidx.appcompat.widget.Toolbar>

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:orientation="vertical">



        <TextView
            android:id="@+id/textview1_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/tajawal_regular"
            android:text="@string/username"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12ssp" />

        <EditText
            android:id="@+id/et_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/background_white_with_border"
            android:hint="@string/username"
            android:inputType="text"
            android:maxLength="20"
            android:maxLines="1"
            android:padding="8dp"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/tajawal_regular"
            android:text="@string/password"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12ssp" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/background_white_with_border"
            android:gravity="start"
            android:hint="@string/password"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:maxLines="1"
            android:padding="8dp"
            android:textAlignment="viewStart" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp">

            <TextView
                android:id="@+id/tv_birthday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_weight="1"
                android:fontFamily="@font/tajawal_medium"
                android:text="@string/date_of_birth"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14ssp" />

            <ImageView
                android:id="@+id/img_date"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:background="@drawable/dp"
                android:padding="@dimen/_8sdp" />

            <TextView
                android:id="@+id/tv_display_birthDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_weight="1"
                android:fontFamily="@font/tajawal_medium"
                android:text="--/--/----"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14ssp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp">

            <TextView
                android:id="@+id/textview4_6"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tajawal_medium"
                android:text="المحافظة"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14ssp" />

            <Spinner
                android:id="@+id/sp_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:gravity="center"
                android:textAlignment="center"
                android:background="@android:color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp">

            <TextView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tajawal_medium"
                android:textColor="@color/text_color"
                android:text="المدينة"
                android:textSize="@dimen/_14ssp" />

            <Spinner
                android:id="@+id/sp_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:background="@android:color/white"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp">

            <TextView
                android:id="@+id/textview5_0"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tajawal_medium"
                android:text="@string/degree"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14ssp" />


            <Spinner
                android:id="@+id/sp_education"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:gravity="center"
                android:background="@android:color/white"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_experience"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tajawal_medium"
                android:text="@string/experience"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14ssp" />


            <EditText
                android:id="@+id/et_experience"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:background="@drawable/background_white_with_border"
                android:gravity="center"
                android:hint="@string/num_of_ex_in_agri"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/tajawal_regular"
                android:inputType="number"
                android:maxLength="2"
                android:maxLines="1"
                android:padding="@dimen/_4sdp"
                android:textAlignment="center" />



        </LinearLayout>


        <Button
            android:id="@+id/bt_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:background="@drawable/bk_button"
            android:fontFamily="@font/tajawal_bold"
            android:text="@string/sign_up"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />

    </LinearLayout>


</androidx.core.widget.NestedScrollView>

</LinearLayout>