<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    tools:context=".ui.Payment.PaymentActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/tajawal_medium"
                android:text="الدفع"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_16ssp" />


            <ImageView
                android:id="@+id/imageview_back"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/_16sdp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/ic_arrow" />
        </RelativeLayout>



    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ly_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:background="@drawable/background_white_with_border"
            android:orientation="vertical"
            android:padding="@dimen/_4sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tajawal_medium"
                android:gravity="center"
                android:text="تكلفة الخدمة "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_12ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_6sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/tajawal_medium"
                    android:text="كان : "
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tv_last_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/tajawal_medium"
                    android:text="50 Egp"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_6sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/tajawal_medium"
                    android:text="دلوقتي : "
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tv_new_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/tajawal_medium"
                    android:gravity="center"
                    android:text="40 Egp"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_6sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/tajawal_medium"
                    android:text="هتوفر : "
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tv_save_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/tajawal_medium"
                    android:gravity="center"
                    android:text="40 Egp"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tv_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@color/colorAccent"
                    android:fontFamily="@font/tajawal_medium"
                    android:gravity="center"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_4sdp"
                    android:text="40 Egp"
                    android:visibility="gone"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/discount_box"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:orientation="horizontal"
            android:background="@drawable/background_white_with_border"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">

            <EditText
                android:id="@+id/discount_code"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:hint="كود الخصم"
                android:maxLines="1"
                android:maxLength="8"
                android:layout_gravity="center"
                android:layout_height="wrap_content"></EditText>

            <Button
                android:id="@+id/btn_apply_discount"
                android:layout_width="wrap_content"
                android:text="تطبيق"
                android:layout_margin="@dimen/_4sdp"
                android:visibility="gone"
                android:textColor="@color/colorWhite"
                android:background="@drawable/bk_button"
                android:layout_height="wrap_content"></Button>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_code_expired"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tajawal_regular"
            android:text="انتهت صلاحية هذا الكود"
            android:visibility="gone"
            android:textColor="@color/colorOne"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/tv_code_not_exist"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tajawal_regular"
            android:text="كود الخصم غير صحيح"
            android:visibility="gone"
            android:textColor="@color/colorOne"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/tv_pay_email"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tajawal_regular"
            android:text="برجاء كتابة البريد الالكترونى التالى فى خانة البريد الالكترونى بصفحة الدفع."
            android:textColor="@color/text_color"
            android:textSize="@dimen/_16ssp" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_16sdp"
            android:background="@drawable/background_white_with_border"
            android:text="pay@chattla.com"
            android:visibility="gone"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@color/text_color"
            android:padding="8dp"
            android:enabled="false"
            android:textAlignment="center" />


        <Button
            android:id="@+id/bt_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_16sdp"
            android:background="@drawable/bk_button"
            android:fontFamily="@font/tajawal_medium"
            android:text="الدفع عن طريق فورى"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_14ssp"
            />

        <com.emeint.android.fawryplugin.views.cutomviews.FawryButton
            android:id="@+id/fawry_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:visibility="gone" />


    </LinearLayout>


</LinearLayout>